<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/button_container"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="bottom">


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#808080"/>

       <!-- <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/quantity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/restaurants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> -->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:id="@+id/info_button_container"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/trash_button_container"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <Button
                android:id="@+id/info_button"
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:focusable="false"
                android:background="@drawable/info"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/trash_button_container"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="80dp">
            <Button
                android:id="@+id/trash_button"
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:focusable="false"
                android:background="@drawable/trash"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
